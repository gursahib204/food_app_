<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/backbutton"
    tools:context=".DisplayOfMenu">

 <androidx.appcompat.widget.SearchView
     android:id="@+id/search"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/white" />

    <TextView
        android:id="@+id/foryou"
        android:layout_below="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For You"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/foryou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Might Like"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

  <LinearLayout
      android:id="@+id/circle"
      android:layout_width="match_parent"
      android:layout_height="89dp"
      android:layout_below="@id/text2"
      android:orientation="horizontal">


          <ImageView
              android:id="@+id/circle1"
              android:layout_width="100dp"
              android:layout_height="80dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/eggssss"
              android:layout_marginTop="10dp"/>
          <ImageView
              android:id="@+id/circle2"
              android:layout_width="100dp"
              android:layout_height="80dp"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/pepsi2"
              android:layout_marginTop="10dp"/>
          <ImageView
              android:id="@+id/circle3"
              android:layout_width="100dp"
              android:layout_height="80dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="10dp"
              android:src="@mipmap/pizzatwooo"
              android:layout_marginTop="10dp"/>

  </LinearLayout>
<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_below="@id/circle"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/fooditems"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/circle"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/chicken"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/idli"
                android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:text="Idli Vada"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="140dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="2$"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="145dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/pizzaC"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/pizzacard"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="Pizza"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="15$"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="145dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/burger"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/burger"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="Burger"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tenTen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="10$"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="145dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shawarma"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/shawarma"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:text="shawarma"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/eleven"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="11$"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="145dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/navcircle"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/location"
           />
        <ImageView
            android:id="@+id/pics"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/gallery"/>
        <ImageView
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:src="@mipmap/camera"/>

    </LinearLayout>



</RelativeLayout>


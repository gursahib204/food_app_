<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbutton"
    tools:context=".Signup">


    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cartlogo"
        />

    <TextView
        android:id="@+id/signup"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SIGN UP "
        android:background="@drawable/signupbackground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />


   <LinearLayout
       android:id="@+id/linera1"
       android:layout_width="318dp"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/signup">


           <EditText
               android:id="@+id/username"
               android:layout_width="300dp"
               android:layout_height="60dp"
               android:hint="Username"
               android:gravity="center"
               android:layout_gravity="bottom|center_horizontal"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="20dp"
               android:background="@drawable/background"
               android:inputType="textEmailAddress"
               android:textSize="20sp"
               android:textStyle="bold"
               />

           <EditText
               android:id="@+id/password"
               android:layout_width="300dp"
               android:layout_height="60dp"
               android:hint="Password"
               android:layout_gravity="bottom|center_horizontal"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="20dp"
               android:background="@drawable/background"
               android:gravity="center"
               android:inputType="textPassword"
               android:textSize="20sp"
               android:textStyle="bold"
               />




           <EditText
               android:id="@+id/password2"
               android:layout_width="300dp"
               android:layout_height="60dp"
               android:hint="Re-Enter Password"
               android:layout_gravity="bottom|center_horizontal"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="20dp"
               android:background="@drawable/background"
               android:gravity="center"
               android:inputType="textPassword"
               android:textSize="20sp"
               android:textStyle="bold"
               />





       <TextView
           android:id="@+id/haveanaccount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Already have an account?"
           android:layout_marginLeft="150dp"
           android:textColor="@color/black"/>




   </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linera1"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:layout_marginTop="10dp"
      android:background="@drawable/buttonbackground"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/signupz"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="Powered By Gursahib"
        android:gravity="right"
        android:textSize="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"/>

</RelativeLayout>